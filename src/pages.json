{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^wd-(.*)": "wot-design-uni/components/wd-$1/wd-$1.vue",
      "^xl-(.*)": "@/components/xl-$1/index.vue"
    }
  },
  "pages": [
    {
      "path": "pages/home/index",
      "style": {
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/home/history/index",
      "style": {
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/home/add/index",
      "style": {
        "navigationStyle": "custom",
        "app-plus": {
          "popGesture": "none" // 关闭 iOS/Android 侧滑返回，避免弹框时被误触
        }
      }
    },
    {
      "path": "pages/home/edit/index",
      "style": {
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/login/index",
      "style": {
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/ai/index",
      "style": {
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/my/index",
      "style": {
        "navigationStyle": "custom"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8",
    "app-plus": {
      // 禁止页面回弹效果
      "bounce": "none"
    }
  },
  "tabBar": {
    "custom": true,
    "color": "#999",
    "selectedColor": "#000",
    "backgroundColor": "#fff",
    "borderStyle": "black",
    "position": "bottom",
    "fontSize": "10px",
    "iconWidth": "20px",
    "iconHeight": "20px",
    "iconSize": "20px",
    "list": [
      {
        "pagePath": "pages/home/index",
        "text": "首页"
      },
      {
        "pagePath": "pages/ai/index",
        "text": "AI"
      },
      {
        "pagePath": "pages/my/index",
        "text": "我的"
      }
    ]
  }
}
